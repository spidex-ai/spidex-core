{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@common/*": ["src/common/*"],
      "@configs/*": ["src/configs/*"],
      "@constants/*": ["src/constants/*"],
      "@entities/*": ["src/entities/*"],
      "@guards/*": ["src/guards/*"],
      "@models/*": ["src/models/*"],
      "@modules/*": ["src/modules/*"],
      "@repositories/*": ["src/repositories/*"],
      "@shared/*": ["src/shared/*"],
      "@database/*": ["src/database/*"],
      "@abis/*": ["src/abis/*"]
    },
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}